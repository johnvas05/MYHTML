<MYHTML>
<head>
    <title>Extended Checkbox Count Tests</title>
</head>
<body>
    <!-- Test case 1: Form with checkbox_count but no checkboxes -->
    <form checkbox_count="2">
        <input type="text" id="text1">
        <input type="submit" id="submit1">
    </form>

    <!-- Test case 2: Form with checkbox_count and mixed input types -->
    <form checkbox_count="2">
        <input type="text" id="text2">
        <input type="checkbox" id="cb1">
        <input type="radio" id="radio1">
        <input type="checkbox" id="cb2">
        <input type="submit" id="submit2">
    </form>

    <!-- Test case 3: Form with checkbox_count and correct number of checkboxes plus other inputs -->
    <form checkbox_count="1">
        <input type="text" id="text3">
        <input type="checkbox" id="cb3">
        <input type="submit" id="submit3">
    </form>

    <!-- Test case 4: Form without checkbox_count and mixed inputs -->
    <form>
        <input type="text" id="text4">
        <input type="checkbox" id="cb4">
        <input type="radio" id="radio2">
        <input type="submit" id="submit4">
    </form>
</body>
</MYHTML> 